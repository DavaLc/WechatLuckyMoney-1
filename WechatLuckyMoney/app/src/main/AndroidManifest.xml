<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.max.wechatluckymoney">

    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"/>

    <!-- 显示顶层浮窗 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.max.wechatluckymoney.activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activitys.LoadingActivity" android:theme="@style/AppTranslucentTheme" android:launchMode="singleInstance" />

        <activity android:name=".activitys.SettingActivity"/>

        <service
            android:name="com.max.wechatluckymoney.services.LuckyMoneyService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/lucky_money_service_config"/>
        </service>

    </application>

</manifest>